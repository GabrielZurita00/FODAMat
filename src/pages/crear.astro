---
import Layout from '../layouts/Layout.astro';
import AreaManager from '../components/AreaManager.vue';

---

<Layout title="Nuevo FODA">
    <main>
        <h1>Nuevo <span class="text-gradient">FODA</span></h1>
        <div class="left-menu">
            <AreaManager client:visible/>
        </div>
    </main>
</Layout>

<style>
    main {
		margin: auto;
		padding: 1.5rem;
	}
	h1 {
		font-size: 3rem;
		font-weight: 800;
		margin: 0;
		color: rgb(var(--blue-accent));
	}
	.text-gradient {
		background-image: linear-gradient(45deg, rgb(var(--red-accent)), rgb(255, 0, 0) 30%, rgb(255, 82, 83) 60%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 500%;
		background-position: 0%;
	}
    .left-menu{
        float: left;
    }
</style>